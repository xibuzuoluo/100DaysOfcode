/*******************************
Use of vector containers II.
********************************/
#include <iostream>
#include <vector>

using std::vector;
using namespace std;
int main(void)
{
	vector<int> v;
	cout << "v.size() == " << v.size() << " v.capacity() = " << v.capacity() << endl;
	v.reserve(10);
	cout << "v.size() == " << v.size() << " v.capacity() = " << v.capacity() << endl;
	v.resize(10);
	v.push_back(0);
	cout << "v.size() == " << v.size() << " v.capacity() = " << v.capacity() << endl;
	
	return 0;
}
